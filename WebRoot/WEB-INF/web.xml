  <servlet-mapping>
    <servlet-name>RegisteServlet</servlet-name>
    <url-pattern>/user/RegistServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
    <url-pattern>/UserServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
